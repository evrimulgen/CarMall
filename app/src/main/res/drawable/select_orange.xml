<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/f9f9f9"/>
            <corners android:radius="3dip"/>
            <stroke
                android:width="1dip"
                android:color="@color/f9f9f9"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/backgroundOrange"/>
            <corners android:radius="3dip"/>
            <stroke
                android:width="1dip"
                android:color="@color/backgroundOrange"/>
        </shape>
    </item>

</selector>