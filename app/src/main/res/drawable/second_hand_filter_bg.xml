<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/colorTextOrange"/>

            <stroke android:width="2dp" android:color="@color/colorTextOrange"/>
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"/>

        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ffffff"/>
            <stroke
                android:width="1px" android:color="@color/lineGray"/>
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"/>
        </shape>
    </item>
</selector>