<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz_12"
            android:layout_marginRight="@dimen/sz_30"
            android:lines="1"
            android:paddingBottom="@dimen/sz_4"
            android:paddingTop="@dimen/sz_4"
            android:text="要硬的身姿风度是那么迷人，几乎完美，既定123"
            android:textColor="@color/colorTextPrimary"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz_12"
            android:layout_marginRight="@dimen/sz_30"
            android:lines="1"
            android:paddingTop="@dimen/sz_2"
            android:text="要硬的身姿风度是那么迷人，几乎完美，既定123"
            android:textColor="@color/colorTextOrange"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz_12"
            android:layout_marginRight="@dimen/sz_30"
            android:lines="1"
            android:paddingTop="@dimen/sz_2"
            android:text="要硬的身姿风度是那么迷人，几乎完美，既定123"
            android:textColor="@color/colorTextOrange"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz_12"
            android:layout_marginRight="@dimen/sz_30"
            android:lines="1"
            android:paddingTop="@dimen/sz_2"
            android:text="要硬的身姿风度是那么迷人，几乎完美，既定123"
            android:textColor="@color/colorTextOrange"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <ImageView
                android:id="@+id/iv_price"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/sz_12"
                android:src="@drawable/ic_money"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/iv_price"
                android:text="9890909"
                android:textColor="@color/colorTextOrange"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/tv_trading_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/sz_20"
                android:textSize="14sp"
                android:text="已成交量:234"
                android:textColor="@color/colorTextSecondary"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sz_12"
                android:textSize="15sp"
                android:textColor="@color/colorTextSecondary"
                android:text="指导价"/>

            <ImageView
                android:id="@+id/iv_guide_price"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_toEndOf="@id/tv_guide"
                android:layout_marginStart="1dp"
                android:src="@drawable/ic_money"/>

            <TextView
                android:id="@+id/tv_guide_price"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_guide_price"
                android:layout_marginStart="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="19890909"
                android:textColor="@color/colorTextSecondary"/>

            <TextView
                android:id="@+id/tv_reserve"
                android:textSize="16sp"
                android:layout_marginRight="@dimen/sz_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存:234辆"
                android:layout_centerVertical="true"
                android:textColor="@color/colorTextSecondary"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="22dp"/>
        </RelativeLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/eeeeee"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品介绍"
            android:layout_marginLeft="@dimen/sz_12"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>