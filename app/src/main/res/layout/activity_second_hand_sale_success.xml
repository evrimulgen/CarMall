<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.loading.carmall.ui.activity.SecondHandSaleSuccessActivity">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:src="@drawable/ic_wrong"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:text="您已成功提交卖车信息!"

        android:textColor="@color/colorTextPrimary"

        android:textSize="18sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"

        android:src="@drawable/sell_success_commit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/sz_20"
        android:layout_marginStart="@dimen/sz_20"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:text="1~3个工作日会有客服人员与您联系,请您保持手机畅通，再次感谢您使用易购用车"

        android:textColor="@color/colorTextPrimary"

        android:textSize="18sp"/>

    <com.loading.carmall.ui.weiget.StateTextView
        android:id="@+id/commit"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/sz_14"
        android:layout_marginStart="@dimen/sz_14"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="前往个人中心查看个人详情"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:normalBackgroundColor="@color/backgroundOrange"
        app:pressedBackgroundColor="@color/colorTextOrange"
        app:radius="4dp"/>

</LinearLayout>
