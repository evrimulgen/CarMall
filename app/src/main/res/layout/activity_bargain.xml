<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.loading.carmall.ui.activity.BargainActivity">

    <include layout="@layout/common_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/sz_14">

        <ImageView
            android:id="@id/image_view"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test_43"/>

        <TextView
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/image_view"
            android:lines="1"
            android:text="@string/test_text"
            android:textColor="@color/colorTextPrimary"
            android:textSize="18sp"
            />

        <TextView
            android:id="@id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/image_view"
            android:lines="1"
            android:text="@string/test_text"
            android:textColor="@color/colorTextHint"
            android:textSize="16sp"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/sz_14"
        android:layout_marginStart="@dimen/sz_14"
        android:background="@drawable/shape_rectangle_gray"
        android:hint="请输入姓名"
        android:padding="10dp"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/ed_phone_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/sz_14"
        android:layout_marginStart="@dimen/sz_14"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle_gray"
        android:hint="请输入11位的手机号"
        android:padding="10dp"
        android:textSize="16sp"/>

    <com.loading.carmall.ui.weiget.StateTextView
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginEnd="@dimen/sz_20"
        android:layout_marginStart="@dimen/sz_20"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:padding="0dp"
        android:text="提交询价后会受到报价信息,请注意查收!"
        android:textColor="@color/colorTextHint"
        android:textSize="16sp"
        app:normalBackgroundColor="@color/eeeeee"
        app:radius="2dp"/>

    <com.loading.carmall.ui.weiget.StateTextView
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/sz_14"
        android:layout_marginStart="@dimen/sz_14"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="询问低价"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:normalBackgroundColor="@color/backgroundOrange"
        app:pressedBackgroundColor="@color/colorTextOrange"
        app:radius="2dp"/>

</LinearLayout>
