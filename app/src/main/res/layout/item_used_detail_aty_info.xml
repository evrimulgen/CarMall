            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sz_6"
                android:text="咨询"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/sz_13"/>
        </LinearLayout>
    </RelativeLayout>

    <com.loading.carmall.ui.weiget.StateTextView
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/sz_12"
        android:layout_marginStart="@dimen/sz_12"
        android:clickable="false"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:lines="3"
        android:padding="14dp"
        android:text="@string/test_text"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp"
        app:normalBackgroundColor="#f4f4f4"
        app:normalStrokeColor="@color/lineGray"
        app:normalStrokeWidth="1px"
        app:radius="6dp"
