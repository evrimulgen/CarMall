                    android:layout_marginTop="@dimen/sz_6"
                    android:text="行驶里程"
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/sz_14"/>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="@dimen/sz_12"
