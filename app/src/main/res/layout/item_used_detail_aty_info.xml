    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_74">

        <ImageView
            android:id="@+id/iv_sale_header"
            android:layout_width="@dimen/sz_48"
            android:layout_height="@dimen/sz_48"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/sz_12"
            android:scaleType="centerCrop"
            android:src="@drawable/test_icon"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sz_4"
            android:layout_marginStart="@dimen/sz_8"
            android:layout_marginTop="@dimen/sz_14"
            android:layout_toRightOf="@id/iv_sale_header"
