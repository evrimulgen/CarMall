<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="210dp"
              android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/lineGray"/>
    <TextView
        android:id="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sz_10"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/sz_40"
        android:lines="2"
        android:text="@string/test_text"
        android:textColor="@color/colorTextPrimary"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_first"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="88dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sz_10"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/test_43"/>
        <ImageView
            android:id="@+id/iv_second"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="88dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/test_43"/>
        <ImageView
            android:id="@+id/iv_third"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="88dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="@dimen/sz_10"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/test_43"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/sz_10"
        android:gravity="bottom">
        <TextView
            android:textColor="@color/colorTextHint"
            android:text="预报价格:"
            android:textSize="16sp"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_price"
            android:textColor="@color/colorTextOrange"
            android:text="40万~60万"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>