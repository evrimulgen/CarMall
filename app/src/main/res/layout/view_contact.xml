<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">

    <TextView
        android:id="@+id/title_index"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/chrome"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        tools:text="A"/>

    <ImageView
        android:id="@+id/contact_img"
        android:layout_toEndOf="@id/title_index"
        android:layout_centerVertical="true"
        android:layout_width="65dp"
        android:layout_height="65dp"
        tools:src="@drawable/pic_01"/>

    <TextView
        android:layout_toEndOf="@id/contact_img"
        android:textColor="@android:color/white"
        android:id="@+id/contact_name"
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="Alex Appleby"/>
    
    <View
        android:layout_alignBottom="@id/contact_img"
        android:layout_toEndOf="@id/contact_img"
        android:layout_marginStart="20dp"
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:background="@color/blue_deep"/>
    
    


</RelativeLayout>