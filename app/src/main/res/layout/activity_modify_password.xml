<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.loading.carmall.ui.activity.ModifyPasswordActivity">

    <include layout="@layout/common_title"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginEnd="@dimen/sz_20"
        android:layout_marginStart="@dimen/sz_20"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_rectangle_gray_radius"
        android:hint="请输入手机号码"
        android:paddingStart="20dp"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginEnd="@dimen/sz_20"
        android:layout_marginStart="@dimen/sz_20"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rectangle_gray_radius"
            android:hint="请输入验证码"
            android:paddingStart="20dp"
            android:textSize="14sp"/>

        <com.loading.carmall.ui.weiget.StateTextView
            android:id="@+id/btn_yazm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:clickable="false"
            android:gravity="center"
            android:padding="0dp"
            android:text="获取验证码"
            android:textColor="@color/colorTextSecondary"
            android:textSize="13sp"
            app:normalBackgroundColor="#d7d7d7"
            app:pressedBackgroundColor="#d7d7d7"
            app:radius="4dp"
            app:unableBackgroundColor="@android:color/holo_red_light"/>

    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginEnd="@dimen/sz_20"
        android:layout_marginStart="@dimen/sz_20"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_rectangle_gray_radius"
        android:hint="请输入新密码"
        android:paddingStart="20dp"
        android:textSize="14sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginEnd="@dimen/sz_20"
        android:layout_marginStart="@dimen/sz_20"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_rectangle_gray_radius"
        android:hint="请再次输入新密码"
        android:paddingStart="20dp"
        android:textSize="14sp"
        tools:ignore="RtlSymmetry"/>

    <com.loading.carmall.ui.weiget.StateTextView
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/sz_20"
        android:layout_marginStart="@dimen/sz_20"
        android:gravity="center"
        android:padding="0dp"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:normalBackgroundColor="@color/backgroundOrange"
        app:pressedBackgroundColor="@color/colorTextOrange"
        app:radius="2dp"
        />
</LinearLayout>
