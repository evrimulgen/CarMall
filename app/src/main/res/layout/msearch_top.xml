<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/backgroundGray"
    android:layout_gravity="center_vertical">
    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="@dimen/sz_12"
        android:layout_marginRight="@dimen/sz_12"
android:layout_marginTop="6dp"
        android:background="@drawable/shape_home_frg_search"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/sz_16"
            android:layout_height="@dimen/sz_16"
            android:layout_marginLeft="@dimen/sz_10"
            android:src="@drawable/ic_home_search"/>

        <EditText
            android:id="@+id/et_searchtext_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz_18"
            android:background="@null"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:hint="@string/search_hint"
            android:textColor="@color/colorTextSecondary"/>
        <ImageView
            android:id="@+id/ib_searchtext_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_close"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_alignRight="@+id/et_searchtext_search"
            android:layout_alignEnd="@+id/et_searchtext_search"
            android:visibility="gone"
            />
    </LinearLayout>


    <Button
        android:id="@+id/buttonback"
        android:layout_width="40dp"
        android:layout_marginRight="@dimen/sz_12"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/relativeLayout"
        android:text="@string/search_cancel"
        android:textSize="17sp"
        />
</LinearLayout>

