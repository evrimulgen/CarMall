<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.loading.carmall.ui.fragment.MineFragment">

    <FrameLayout
        android:id="@+id/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        >

        <TextView
            android:id="@+id/tv_title_common"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/backgroundGray"
            android:text="个人中心"
            android:textColor="@color/colorTextPrimary"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="@dimen/sz_20"
            android:padding="5dp"
            android:src="@drawable/ic_share"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_mine">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/test_11"/>

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_avatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="未登录"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <!--我的消息-->
            <LinearLayout
                android:id="@+id/ly_mine_message"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_rect_duck"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="@dimen/sz_12"
                    android:src="@drawable/ic_mine_message"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="我的消息"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="17sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/lineGray"/>

            <!--常见问题-->
            <LinearLayout
                android:id="@+id/ly_common_problem"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_rect_duck"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="@dimen/sz_12"
                    android:src="@drawable/ic_mine_message"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="常见问题"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="17sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/lineGray"/>

            <!--卖车日程-->
            <LinearLayout
                android:id="@+id/ly_schedule"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_rect_duck"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="@dimen/sz_12"
                    android:src="@drawable/ic_mine_message"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="卖车日程"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="17sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/lineGray"/>

            <!--我的订单-->
            <LinearLayout
                android:id="@+id/ly_order"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_rect_duck"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="@dimen/sz_12"
                    android:src="@drawable/ic_mine_message"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="我的订单"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="17sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/lineGray"/>

            <!--意见反馈-->
            <LinearLayout
                android:id="@+id/ly_feedback"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_rect_duck"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="@dimen/sz_12"
                    android:src="@drawable/ic_mine_message"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="意见反馈"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="17sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/lineGray"/>

            <!--设置-->
            <LinearLayout
                android:id="@+id/ly_setting"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_rect_duck"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="@dimen/sz_12"
                    android:src="@drawable/ic_mine_message"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="设置"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="17sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/lineGray"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
